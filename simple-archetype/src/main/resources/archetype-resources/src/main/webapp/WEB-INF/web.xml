#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <listener>
    <listener-class>
      com.sun.xml.ws.transport.http.servlet.WSServletContextListener
    </listener-class>
  </listener>

  <filter>
    <filter-name>jaxrs</filter-name>
    <filter-class>org.glassfish.jersey.servlet.ServletContainer</filter-class>
    <init-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>${package}.App</param-value>
    </init-param>
  </filter>

  <filter>
    <filter-name>idl-filter</filter-name>
    <filter-class>com.webcohesion.enunciate.rt.IDLFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>jaxrs</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>idl-filter</filter-name>
    <url-pattern>*.wsdl</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>idl-filter</filter-name>
    <url-pattern>*.wadl</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>jaxws</servlet-name>
    <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>jaxws</servlet-name>
    <url-pattern>/person-service</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>jaxws</servlet-name>
    <url-pattern>/group-service</url-pattern>
  </servlet-mapping>

  <mime-mapping>
    <extension>wsdl</extension>
    <mime-type>text/xml</mime-type>
  </mime-mapping>

  <mime-mapping>
    <extension>xsd</extension>
    <mime-type>text/xml</mime-type>
  </mime-mapping>
</web-app>
